{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "entities/*": ["entities/*"],
      "infrastructure/*": ["infrastructure/*"],
      "ports/*": ["ports/*"],
      "services/*": ["services/*"]
    }
  },
  "include": ["src"]
}

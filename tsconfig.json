  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "infrastructure/*": ["./infrastructure/*"],
      "*": ["./*"]
    }
  },
  "include": ["src"]
}
